{
  "entryFile": "./src/index.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "controllerPathGlobs": [
    "./src/lib/modules/**/*.controller.ts"
  ],
  "spec": {
    "basePath": "api",
    "specVersion": 3,
    "host": null,
    "outputDirectory": "./src/routes",
    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "name": "authorization",
        "in": "header",
        "scopes" : {
          "root" : "can do",
          "admin" : "can do",
          "user" : "can do"
        }
      }
    }
  },
  "routes": {
    "basePath": "",
    "routesDir": "./src/routes",
    "middleware": "express",
    "authenticationModule": "./src/lib/modules/auth/middlewares/auth"
  }
}
